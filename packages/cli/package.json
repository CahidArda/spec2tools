{
  "name": "@spec2tools/cli",
  "version": "0.1.1",
  "description": "CLI for interacting with OpenAPI-based AI tools",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "spec2tools": "./dist/index.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/index.js",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "openapi",
    "cli",
    "ai",
    "agent",
    "tools",
    "ai-sdk"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CahidArda/spec2tools.git",
    "directory": "packages/cli"
  },
  "dependencies": {
    "@spec2tools/core": "workspace:*",
    "@ai-sdk/openai": "^3.0.25",
    "ai": "^6.0.68",
    "chalk": "^5.3.0",
    "commander": "^14.0.0",
    "dotenv": "^17.2.3",
    "ora": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
