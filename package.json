{
  "name": "spec2tools",
  "version": "0.1.0",
  "description": "Dynamically convert OpenAPI specs into AI agent tools at runtime",
  "type": "module",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts"
    }
  },
  "bin": {
    "spec2tools": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "openapi",
    "cli",
    "ai",
    "agent",
    "tools",
    "ai-sdk",
    "mcp",
    "vercel-ai"
  ],
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/openai": "^3.0.25",
    "ai": "^6.0.68",
    "chalk": "^5.3.0",
    "commander": "^14.0.0",
    "dotenv": "^17.2.3",
    "express": "^5.0.0",
    "open": "^10.1.0",
    "ora": "^8.1.0",
    "yaml": "^2.5.0",
    "zod": "^3.24.0",
    "zod-to-json-schema": "^3.24.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
